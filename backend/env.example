# Environment Configuration
# Copy this file to .env and modify as needed

# Environment Type
ENVIRONMENT=development  # development, staging, production

# Database Configuration
# For SQLite (default):
DATABASE_URL=sqlite:///./risk_platform.db
DATABASE_TYPE=sqlite  # sqlite, postgresql

# For PostgreSQL (local example), uncomment and adjust:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/risk_platform
# Note: driver is auto-set to pg8000 â†’ postgresql+pg8000:// if missing

# Authentication
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRES_MINUTES=1440  # 24 hours

# Service URLs (Local Development)
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# Cloud Configuration
CLOUD_PROVIDER=local  # local, railway, render, aws, custom

# Cloud URLs (set these when deploying to cloud)
CLOUD_DATABASE_URL=  # e.g., postgresql://user:pass@host:port/db
CLOUD_FRONTEND_URL=  # e.g., https://your-app.railway.app
CLOUD_BACKEND_URL=   # e.g., https://your-api.railway.app

# CORS Origins (comma-separated)
CORS_ORIGINS_STR=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000
